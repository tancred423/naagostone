    "deno-dom": "https://deno.land/x/deno_dom@v0.1.45/deno-dom-wasm.ts",
    "@std/log": "jsr:@std/log@^0.224.9",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "turndown": "npm:turndown@^7.2.0"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  }
}
